.sheet-main{
  width: 80%;
  height: 80vw;
  background-color: #FFF;
  border-radius: 10rpx;
  position: absolute;
  left: 10%;
  top: 30vw;
  z-index: 10;
}

.title{
  text-align: center;
  font-size: 30rpx;
  color: #000;
  padding: 26rpx 0;
}

.table-list{
  width: calc( 100% - 40rpx );
  margin: 10rpx 20rpx;
}

.table-item{
  width: 100%;
  border-bottom: 1px solid #ccc;
  margin-bottom: 40rpx;
}
.table-classify{
   font-size: 27rpx;
   line-height: 1;
   color: rgb(157, 157, 157);
}

.meals-num{
   font-size: 27rpx;
   padding-top: 10rpx;
   display: flex;
}

.meals-num .num{
  padding:10rpx 30rpx;
  font-weight:500;
  min-width:60rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align:center;
  border:1px solid #FFF; 
  margin:20rpx;
  border-radius:31rpx;
}

.demand-list{
  font-size: 24rpx;
  display: flex;
}

.demand-list .demand{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin:20rpx 20rpx 20rpx 0;
    padding: 10rpx 20rpx;
    border: 1px solid rgb(214, 214, 214);
    border-radius: 31rpx;
    min-width:160rpx;
    height: 42px;
    box-sizing: border-box;
    text-align: center;
    color:rgb(214, 214, 214);
}

.instruction{
  font-size: 18rpx;
}


.select-demand{
  color: #000!important;
  border-color: #000!important;
} 

.select{
  background-color: #499bfb;
  color: #FFF!important;
  border-color: #499bfb!important;
}

.btn{
  background-color:rgb(251,251,251);
  /*rgb(83, 83, 86) rgb(251, 83, 86); */
  box-shadow: 0 0 20px #ccc;
  color: rgb(223,223,223);
  /*#ccc  */
  text-align: center;
  font-size: 27rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  border: none;
}

.btn-submit{
  background-color:rgb(251, 83, 86);
  color:#FFF;
}

.mask{
  width: 100%;
  height: 100vh;
  opacity: 0.5;
  background-color: #000;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}

.cancel{
  right: 10%;
  width: 50rpx;
  height: 50rpx;
  top: 70px;
  z-index: 16;
  position: absolute;
}